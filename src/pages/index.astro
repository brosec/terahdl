---
import BaseLayout from "../layouts/BaseLayout.astro";
import ToolApp from "../components/ToolApp.jsx";
---

<BaseLayout
title="Download TeraBox Videos Easily"
description="Access details and download files shared via public TeraBox links."
>

<section class="py-10 text-center">
  <h2 class="text-4xl font-bold mb-3">
    Download TeraBox Files Easily
  </h2>

  <p class="text-slate-400 max-w-xl mx-auto">
    Paste your TeraBox share link below to fetch file details and download safely.
  </p>
</section>

<ToolApp client:load />

</BaseLayout>
