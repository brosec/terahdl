---
import "../styles/global.css";
const { title, description } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title} – TeraBoxHDL</title>
  <meta name="description" content={description} />
</head>
<body>
  <header class="border-b border-slate-800">
    <div class="max-w-6xl mx-auto p-4 flex justify-between">
      <a href="/" class="font-bold text-xl">TeraBoxHDL</a>
      <nav class="space-x-4 text-sm">
        <a href="/how-it-works">How it works</a>
        <a href="/faq">FAQ</a>
        <a href="/contact">Contact</a>
      </nav>
    </div>
  </header>

  <main class="max-w-6xl mx-auto p-4">
    <slot />
  </main>

  <footer class="border-t border-slate-800 mt-10">
    <div class="max-w-6xl mx-auto p-4 text-sm text-slate-400">
      <a href="/privacy">Privacy</a> ·
      <a href="/terms">Terms</a> ·
      <a href="/disclaimer">Disclaimer</a>
    </div>
  </footer>
</body>
</html>
